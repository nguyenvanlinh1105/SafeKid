<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tẽ"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_chat_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Phần trên: Trái tim với vòng tròn bao quanh -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Hình trái tim với hình tròn bao quanh -->
            <FrameLayout
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp">

                <!-- Hình tròn bao quanh -->
                <View
                    android:id="@+id/circularBorder"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:background="@drawable/heart_safe" />

                <!-- Hình trái tim -->
                <ImageView
                    android:id="@+id/heartImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/heart_icon256" />
            </FrameLayout>

            <!-- Số nhịp tim -->

            <!-- Đơn vị nhịp tim -->

            <TextView
                android:id="@+id/heartRateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="76"
                android:textColor="#43B15E"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/heartRateUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhịp tym an toàn"
                android:textColor="#308043"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal">

            <!-- Card 1: Walk -->

            <!-- Card 2: Sleep -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/green_shadow"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:id="@+id/pieNhietdo"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:background="@color/material_dynamic_secondary95"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <!-- ImageView at top center -->

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/icont" />

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp">

                        <!-- Circular ProgressBar -->
                        <ProgressBar
                            android:id="@+id/circularProgressSleep"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/circular_progress" />

                        <!-- Value -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/progressValueNhietDo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28°C"
                                android:textColor="#000"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textwarningNhietDo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="An toàn"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>


    </LinearLayout>
</ScrollView>
