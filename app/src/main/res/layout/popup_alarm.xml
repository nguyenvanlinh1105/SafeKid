<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/popup_background_modern2"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:elevation="16dp">

    <!-- Icon cảnh báo hiện đại với hiệu ứng nền động -->
    <ImageView
        android:id="@+id/img_warning"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_round_warning_amber_48"
        android:padding="12dp" />

    <!-- Tiêu đề cảnh báo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Cảnh báo nguy hiểm!"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.02"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2" />

    <!-- Nội dung cảnh báo -->
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:text="Phát hiện nhịp tim của trẻ không an toàn!"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:text="KIỂM TRA NGAY"
        android:textAllCaps="true"
        android:textColor="@color/red_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:drawableEnd="@drawable/ic_round_arrow_forward_24"
        android:drawablePadding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />


</LinearLayout>
