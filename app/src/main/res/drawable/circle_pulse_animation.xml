<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/pulse_state">
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="@color/red_light"
                android:endColor="@color/red_primary"/>
            <stroke
                android:width="2dp"
                android:color="@color/white"/>
        </shape>
    </item>
    <transition android:drawable="@drawable/pulse_effect"/>
</animated-selector>